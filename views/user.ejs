<div class="main">
    <div class="main__centercolumn">
        <div class="main__post">
            <h2>Create a post</h2>
            <%- include ("partials/messages.ejs") %>
            <form action="/user" method="POST">
                <textarea name="content" placeholder="What you want to do" rows="10" cols="50"></textarea><br />
                <button type="submit">Publish</button>
            </form>
        </div>
        
        
    </div>
    <div class="main__rightcolumn">
        <div>
            <p style="color: #499edf; font-weight: bold; font-size: 24px;">Hello, <%= user.name %> </p>
        </div>
        <div class="main__links">
            <div style="margin-top: 20px">
                <a href="/user/profile" class="info__link main__link">Profile</a>
            </div>
            <div style="margin-top: 20px">
                <a href="/posts" class="info__link main__link">Posts</a>
            </div>
            <div style="margin-top: 20px">
                <a href="/logout" class="info__link main__link">Logout</a>
            </div>
        </div>
    </div>
</div>