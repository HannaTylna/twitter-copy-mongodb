<div class="main">
    <div class="main__centercolumn">
        <div class="main__post">
            <h2>Create a post</h2>
            <%- include ("partials/messages.ejs") %>
            <form action="/posts" method="POST">
                <textarea name="content" placeholder="What you want to do" rows="10" cols="50"></textarea><br />
                <button type="submit">Publish</button>
            </form>
        </div>
        <div>
            <% posts.forEach( (post) =>{%>
                <div>
                    <a href="/users/<%= post.user%>"><img src="/<%= post.image %>" alt="A user photo" height="50px" ></a>
                    <a href="/users/<%= post.user%>"><b><%= post.user %></b></a>  <%= post.dateString %> <br />
                    <%= post.content %> 
                </div>
                <hr>
            <%})%>  
        </div>
        
    </div>
    <div class="main__rightcolumn">
        <div>
            <p>Hello, <%= user.name %> </p>
        </div>
        <div class="main__links">
            <a href="/user/" class="info__link main__link">Profile</a>
            <a href="/logout" class="info__link main__link">Logout</a>
        </div>
    </div>
</div>