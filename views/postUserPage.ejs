<div class="main">
    <%- include ("./partials/nav.ejs") %> 
    <div class="main__column">     
        <h1 style="text-transform: uppercase;">Posts</h1>  
        <div style="margin: 50px 50px 50px 0px">
            <% posts.forEach( (post) =>{%>
                <div style="padding: 20px; text-align: left;">
                    <a href="/user/<%= post.creator._id%>"  class="user__link" >
                        <img 
                            src="/<%= post.creator.img %>" 
                            alt="A user photo" 
                            height="50px" 
                            class="rounded"
                        />
                        <%= post.creator.name %>
                    </a>
                    <%= post.createdAt %> <br />
                    <div style="margin-top: 10px; padding: 20px; background-color: #c9c5c5; text-align: justify; color: #000">
                        <%= post.content %> 
                    </div>
                </div>
                <hr>
            <%})%>  
        </div>   
    </div>
</div>
