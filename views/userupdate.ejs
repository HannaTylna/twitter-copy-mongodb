<div class="form__register">
    <h1>Update information</h1>

    <%- include ("partials/messages.ejs") %>

    <form action="/userupdate" method="GET">
        <div class="form__field">
            <label class="form__label" for="name">Name: <span style="color: red">*</span>  </label>
            <input 
                class="form__input"
                type = "name" 
                name = "name"
                value = "<%= user.name %>"
            />
        </div>
        <div class="form__field">
            <label class="form__label" for="email">Email: </label>
            <input 
                class="form__input"
                type = "email" 
                name = "email"
                placeholder = "Enter email"
                value = "<%= typeof email != 'undefined' ? email : '' %>"
            />
        </div>
        <div class="form__field">
            <label class="form__label" for="password">Password: <span style="color: red">*</span> </label>
            <input 
                class="form__input"
                type = "password" 
                name = "password"
                placeholder = "Create a password"
                value = "<%= typeof password != 'undefined' ? password : '' %>"
            />
        </div>
        <div class="form__field" for="password2">
            <label class="form__label">Confirm Password: <span style="color: red">*</span>  </label>
            <input 
                class="form__input"
                type = "password" 
                name = "password2"
                placeholder = "Confirm your password"
                value = "<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
        </div>
        <div class="form__field">
            <button type="submit" class="form__btn">
                Save Changes
            </button>
        </div>
    </form>
</div>